name: CI Pipeline

on:
  workflow_dispatch:
  push:
    paths:
      - 'code/**'
  pull_request:
    paths:
      - 'code/**'

jobs:
  build-and-test:
    runs-on: self-hosted
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Debug Environment and Makefile
        run: |
          echo "Current directory:"
          pwd
          echo "Directory contents:"
          ls -la
          echo "Looking for Makefile:"
          find . -name "Makefile"
          echo "Content of Makefile (if exists):"
          if [ -f "Makefile" ]; then
            cat Makefile
          else
            echo "Makefile not found in current directory"
          fi
      
      - name: Build API
        run: |
          echo "Current directory before build:"
          pwd
          echo "Verifying Makefile exists:"
          if [ -f "Makefile" ]; then
            echo "Makefile found. Available targets:"
            make -n
            echo "Running build target:"
            make build
          else
            echo "ERROR: Makefile not found!"
            exit 1
          fi
      
      - name: Run tests
        if: success()
        run: make test
      
      - name: Run linting
        if: success()
        run: make lint
      
      - name: Login to Docker Hub
        if: success()
        run: |
          echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin
      
      - name: Build and push Docker image
        if: success()
        run: |
          SHA=$(git rev-parse --short HEAD)
          docker build -t "${{ secrets.DOCKER_USERNAME }}/student-api:latest" .
          docker build -t "${{ secrets.DOCKER_USERNAME }}/student-api:${SHA}" .
          docker push "${{ secrets.DOCKER_USERNAME }}/student-api:latest"
          docker push "${{ secrets.DOCKER_USERNAME }}/student-api:${SHA}"
